#!/bin/bash

# Set Git dir
GIT=~/Git

# Go to Git dir to add, commit and push changes to remote
pushd $GIT > /dev/null
for DIR in Backups Scripts; do
    pushd $DIR > /dev/null
    printf "===========********===========\nNow in dir: %s\n===========********===========\n" "$DIR"
    git diff
    git commit -am"Automated update"
    git fetch origin
    git rebase origin/master
    git push
    popd > /dev/null
done
popd > /dev/null

