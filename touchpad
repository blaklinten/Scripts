#!/bin/bash
State=$(xinput list-props "AlpsPS/2 ALPS GlidePoint" | grep 152 | tail -c 2)

if [[ $State == "0" ]]
then
    xinput set-prop "AlpsPS/2 ALPS GlidePoint" 152 1
    pkill unclutter
elif [[ $State == "1" ]]
then
    xinput set-prop "AlpsPS/2 ALPS GlidePoint" 152 0
    unclutter -idle 0.1 -root &
fi
