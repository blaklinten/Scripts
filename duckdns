#!/bin/sh

IP="$(curl ifconfig.me)"

while true; do
	sleep 10;
	NEW_IP="$(curl ifconfig.me)";
	printf '%s\n%s%s\n%s%s\n' \
		"$(date)" "Old IP: " "$IP" "New IP: " "$NEW_IP"  >> ~/.duckdns.log
	if [ "$NEW_IP" != "$IP" ]; then
		curl https://www.duckdns.org/update?domains=mircas\&token=8a62211f-8de0-432c-9f72-5fbd38ce1ff8 >> ~/.duckdns.log
	fi
done
